<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <META name="keywords" content="<%= @seo_keywords %>" />
    <%= favicon_link_tag 'favicons/favicon.ico' %>
    <link href="https://fonts.googleapis.com/css?family=Lato|Roboto+Slab" rel="stylesheet"> 
    <%= stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <%= render 'shared/blog_nav' %>
      
      <%= render 'shared/blog_masthead' %>
      
      <!--start of main and row element-->
      <main role="main" class="container">
        <div class="row">
          <%= yield %>    
          <%= render 'shared/blog_sidebar' %>
        </div>
        <%= render 'shared/blog_footer' %>
        <%= alerts %>
    
      </main>
    </div>
  </body>
</html>
